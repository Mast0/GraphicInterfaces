<Window x:Class="lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab2"
        mc:Ignorable="d"
        Title="TextEditor" Height="450" Width="800">

    <Window.Resources>
        <LinearGradientBrush x:Key="LinearPanelBrush">
            <GradientStop Color="Yellow" Offset="0"></GradientStop>
            <GradientStop Color="Blue" Offset="0.5"></GradientStop>
            <GradientStop Color="Yellow" Offset="0.8"></GradientStop>
        </LinearGradientBrush>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="BorderBrush" Value="White"></Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource LinearPanelBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#FFCBBEBE" BorderThickness="2" CornerRadius="10">
            <StackPanel Orientation="Horizontal" Margin="5">
                
                <Button ToolTip="Відкрити">
                    <Image Source="images/open.png" Width="50" Height="50" />
                </Button>

                <Button ToolTip="Стерти">
                    <Image Source="images/clean.png" Width="50" Height="50" />
                </Button>

                <Button ToolTip="Копіювати">
                    <Image Source="images/copy.png" Width="50" Height="50" />
                </Button>

                <Button ToolTip="Вставити">
                    <Image Source="images/import.png" Width="50" Height="50" />
                </Button>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" BorderBrush="#FFCBBEBE" BorderThickness="2" CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                
                <TextBox Margin="20" Grid.Row="0" VerticalScrollBarVisibility="Visible" TextWrapping="Wrap"/>

                <DockPanel Margin="10" Grid.Row="1">
                    <Button Style="{x:Null}" Content="Ok" DockPanel.Dock="Bottom" Width="24" Height="24"/>

                </DockPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
