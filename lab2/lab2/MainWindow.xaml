<Window x:Class="lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="False">
        <Label DockPanel.Dock="Top" HorizontalContentAlignment="Center" Content="Label" Width="Auto"/>
        <TextBox DockPanel.Dock="Left" TextWrapping="Wrap" Text="TextBox" Width="300"/>
        <TextBox DockPanel.Dock="Right" TextWrapping="Wrap" Text="TextBox" Width="300"/>
        <Button DockPanel.Dock="Bottom" Margin="20" Content="Button" Width="70" Height="20"/>
    </DockPanel>
</Window>
