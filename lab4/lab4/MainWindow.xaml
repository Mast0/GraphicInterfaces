<Window x:Class="lab4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar Height="30">
                <Button x:Name="btn_Create" Content="Create" Click="btn_Create_Click"/>
                <Separator />
                <Button x:Name="btn_Update" Content="Update" Click="btn_Update_Click" />
                <Separator />
                <Button x:Name="btn_Delete" Content="Delete" Click="btn_Delete_Click" />
            </ToolBar>
        </ToolBarTray>
        <Grid DataContext="{Binding ElementName=list, Path=SelectedItem}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ListBox Grid.Row="0" 
        Grid.Column="0" 
        Grid.ColumnSpan="2" 
        Margin = "0,0,0,3"
        ScrollViewer.VerticalScrollBarVisibility="Auto"
        Name="list"
        ItemsSource="{Binding}" 
        DisplayMemberPath="FullName" />

            <TextBlock Grid.Row="1" Margin="5">ID:</TextBlock>
            <TextBox x:Name="tbox_ID" Grid.Row="1" Grid.Column="1" Text="{Binding Path=Id, Mode=OneWay}" Focusable="True" IsEnabled="False"/>

            <TextBlock Grid.Row="2" Margin="5">ISBN:</TextBlock>
            <TextBox x:Name="tbox_ISBN" Grid.Row="2" Grid.Column="2" Text="{Binding Path=ISBN, Mode=OneWay}" Focusable="True" />

            <TextBlock Grid.Row="3" Margin="5">Name:</TextBlock>
            <TextBox x:Name="tbox_Name" Grid.Row="3" Grid.Column="2" Text="{Binding Path=FullName, Mode=OneWay}" Focusable="True" />

            <TextBlock Grid.Row="4" Margin="5">Authors:</TextBlock>
            <TextBox x:Name="tbox_Authors" Grid.Row="4" Grid.Column="2" Text="{Binding Path=Authors, Mode=OneWay}" Focusable="True" />

            <TextBlock Grid.Row="5" Margin="5">Publisher:</TextBlock>
            <TextBox x:Name="tbox_Publisher"  Grid.Row="5" Grid.Column="2" Text="{Binding Path=Publisher, Mode=OneWay}" Focusable="True"/>

            <TextBlock Grid.Row="6" Margin="5">Publish Year:</TextBlock>
            <TextBox x:Name="tbox_PubYear" Grid.Row="6" Grid.Column="2" Text="{Binding Path=Year, Mode=OneWay}" Focusable="True"/>
        </Grid>
    </DockPanel>

</Window>
